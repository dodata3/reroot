<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:weightSum="1">
    <FrameLayout android:background="@drawable/touchpad" android:layout_width="wrap_content" android:layout_height="317dp" android:layout_weight="0.80" android:id="@+id/TouchPad"></FrameLayout>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="textMultiLine" android:layout_weight="0.21" android:id="@+id/edit_test">
        <requestFocus></requestFocus>
    </EditText>
    <Button android:layout_width="238dp" android:text="Submit" android:layout_height="wrap_content" android:id="@+id/submit_btn"></Button>
    
</LinearLayout>
